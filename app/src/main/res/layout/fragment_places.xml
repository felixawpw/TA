<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlacesFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select your current location"
            android:gravity="center"
            android:textSize="25dp"
            />

        <Button
            android:id="@+id/fragment_places_button_first_selection"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:text="..."
            android:background="@drawable/button_bg"/>

        <Button
            android:id="@+id/fragment_places_button_second_selection"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:text="..."
            android:background="@drawable/button_bg" />

        <Button
            android:id="@+id/fragment_places_button_third_selection"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:text="..."
            android:background="@drawable/button_bg" />

        <Button
            android:id="@+id/fragment_places_button_fourth_selection"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:text="..."
            android:background="@drawable/button_bg" />

        <Button
            android:id="@+id/fragment_places_button_select_place"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="Confirm"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_bg_black" />
    </LinearLayout>

</FrameLayout>
<resources>

    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorDark">@color/appColorDark</item>
        <item name="colorMediumDark">@color/appColorMediumDark</item>
        <item name="colorMediumLight">@color/appColorMediumLight</item>
        <item name="colorLight">@color/appColorLight</item>
        <item name="colorAccent">@color/appColorAccent</item>
        <item name="colorBlack">@color/appColorBlack</item>
        <item name="colorWhite">@color/appColorWhite</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Spinner" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:spinnerItemStyle">@style/AppTheme.Spinner</item>
        <item name="android:padding">1dp</item>
        <item name="android:background">@color/appColorWhite</item>
        <item name="android:textColor">@color/appColorBlack</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>